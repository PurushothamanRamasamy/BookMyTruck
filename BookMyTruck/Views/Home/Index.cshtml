                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Next" class="btn btn-outline-light" />
                        </div>
                        <div> @ViewBag.Rmessage</div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}


