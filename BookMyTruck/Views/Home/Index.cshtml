                    <div class="form-group">
                        @Html.LabelFor(model => model.Drop, htmlAttributes: new { @class = "control-label col-md-12 text-light" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Drop, new { htmlAttributes = new { @id = "txtDestination", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Drop, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-12 text-light" })
