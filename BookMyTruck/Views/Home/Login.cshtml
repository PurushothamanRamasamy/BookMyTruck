
    @model BookMyTruck.Models.Login

@*@{ 
    Layout = "~/Views/Shared/_LoginandRegisterLayout.cshtml";
}*@

    @using (Html.BeginForm("Login","Home"))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-left:60px">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" id="mobDiv">
        <div class="row">

            @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-5 font-weight-bold", @style = "margin-left:15px;color:#150941;" })
            <a class="fas fa-info-circle col-md-1" style="margin-left:-40px" data-toggle="tooltip" data-placement="left" title="Enter mobile number without county code !"></a>
            <div class="col-md-6 "> </div>
        </div>
        <div class="col-md-10">

            @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control", @id = "txtMobile", @maxlength = "10" } })
            @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger", @id = "errormobile" })
        </div>
    </div>
    <div class="spinner-border"id="loading" style="display:none"></div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Next" id="btnnext" class="btn btn-danger" />
        </div>
        
    </div>
    <div id="credentialsError">
        <p class="text-danger" style="font-size:13px" >@TempData["userError"] </p>
    </div>
    <div id="datatoapppend" style="display:none">
        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-12 font-weight-bold ", @style = "color:#150941;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "txtLoginpassword", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @id = "errorpassword" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Get in" id="btnpassword" class="btn btn-danger" />
            </div>
        </div>
        <div class="form-group" style="display:none">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" id="btnsubmit" class="btn btn-danger" />
            </div>
        </div>
    </div>
</div>
    }


