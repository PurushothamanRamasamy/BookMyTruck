
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        .btn:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19) !important;
        }
    </style>
</head>
<body style="background-color: #f2f2f2">
    <div class="container-fluid" style="margin-top:-50px !important;">
        <div class="row">
            @*#150941*@
            <div class="col-2 px-1 position-fixed" id="sticky-sidebar" style="margin-bottom:10px !important;border-radius:10px;margin:10px;background-image:url('./../../Content/images/sidenavbg.png');height: 96%;background-position: center;background-repeat: no-repeat;background-size: cover;">
                <div class="nav flex-column flex-nowrap vh-100 overflow-auto text-white p-2" style="margin-top:10px">
                    <p class="text-light text-center" style="margin-top:10px">Welcome</p>
                    <h4 class="text-danger text-center">
                        Admin
                    </h4>
                    <div class="text-light" style="margin-top:20px">
                        <hr style="background-color:white !important" />
                    </div>

                    <a href="/Admin/Admindashboard" class="nav-link bg-light text-danger" style="border-radius:5px">View All Services</a>
                    <div href="./" class="nav-link">Link</div>
                    <div href="./" class="nav-link">Link</div>
                    <div href="./" class="nav-link">Link</div>
                    <div href="./" class="nav-link">Link</div>
                    
                </div>

            </div>
            <div class="col-10 offset-2" id="main">
                <nav class="navbar justify-content-end" style="margin-left:5px;margin-top:10px;margin-right:-10px;background-color: #150941;padding:20px;border-radius:10px">

                    <ul class="nav ">


                        <li class="nav-item" style="margin-right:50px;position: relative;">
                            @{
                                if (Convert.ToInt32(TempData.Peek("managerRequests"))!=0)
                                {
                                    @Html.ActionLink("Requests", "ManagerRequests", null, htmlAttributes: new { @class = "btn btn-danger" })
                            <span class="" style="position:absolute;top:-20px;right:-20px;padding:2px 10px;border-radius:50%;background-color:white">
                                @Convert.ToInt32(TempData.Peek("managerRequests"))
                            </span>
                                }
                            }

                        </li>
                        <li class="nav-item">
                            <a href="/Home/Logout" class="btn font-weight-bold btn-outline-light">Logout</a>
                        </li>
                    </ul>

                </nav>
                <div class="card" style="margin-top:50px;margin-left:10px;background-color:#ffffff;padding:20px">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
