
@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book My Truck</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    
    <style>
        .btn:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19) !important;
        }
        body, html {
            height: 100%;
            margin: 0;
        }

        .bg {
            background-image: url("./../../Content/images/bg.png");
            height: 100%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }
    </style>
</head>
<body class="bg">
    <div class="container" style="margin-top:-40px;">
        <nav class="navbar fixed-top" style="background-color:white ;padding:10px;border-radius:10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19) ">

            <ul class="nav container">
                <li class="navbar-brand text-dark font-weight-bold">
                    Book My Truck
                </li>
                <li class="nav-item" style="margin-left:80px">
                    <a href="~/Home/Index" class="btn btn-outline-danger">Home</a>
                </li>


                <li class="nav-item" style="margin-right:50px">

                </li>


                @{
                    if (Session["UserId"] != null)
                    {
                        <li class="text-success nav-item">
                          Welcome  @Session["UserName"].ToString()
                        </li>
                        <li class="nav-item" style="margin-left:300px">
                            @{
                                if (Session["UserRole"].ToString() == "customer")
                                {
                                    <a href="/Customer/MyBookings" class="btn btn-danger">
                                        Bookings
                                        @{
                                            if (Convert.ToInt32(TempData.Peek("myRequests")) != 0)
                                            {
                                                <span class="badge badge-light">
                                                    @Convert.ToInt32(TempData.Peek("myRequests"))
                                                </span>
                                            }
                                        }

                                    </a>
                                }
                            }
                        <li class="nav-item" style="margin-left:2px">
                            @{
                                if (Session["UserRole"].ToString() == "customer")
                                {
                                    <a href="/Customer/Serviced" class="btn btn-danger">
                                        Serviced


                                    </a>
                                }
                            }

                        </li>

                        </li>
                        <li class="nav-item" style="margin-left:10px">
                            <a href="/Home/Logout" class="btn btn-danger">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item" style="margin-left:600px">
                            <a href="~/Home/ValidateUser" class="btn btn-danger">Signin / Signup</a>
                        </li>


                    }
                }



            </ul>

        </nav>
        <div class="container" style="margin-top:50px;margin-left:10px;padding:20px">
            @RenderBody()
        </div>
    </div>
   


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
