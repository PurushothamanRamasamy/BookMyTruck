
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        .btn:hover {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19) !important;
        }
        tr th * {
            width:100%
        }
    </style>
</head>
<body style="background-color: #f2f2f2">
    <div class="container-fluid" style="margin-top:-50px !important;">
        <div class="row">
            @*#150941*@
            <div class="col-2 px-1 position-fixed" id="sticky-sidebar" style="margin-bottom:10px !important;border-radius:10px;margin:10px;background-image:url('./../../Content/images/sidenavbg.png');height: 96%;background-position: center;background-repeat: no-repeat;background-size: cover;">
                @{
                    if (Session["IsValidManager"] != null)
                    {
                                <div class="nav flex-column flex-nowrap vh-100 overflow-auto text-white p-2" style="margin-top:10px">
                                    <p class="text-light text-center" style="margin-top:10px">Welcome</p>
                                    <h4 class="text-danger text-center font-italic font-weight-bolder">
                                        Manager
                                    </h4>
                                    <div class="text-light" style="margin-top:20px">
                                        <hr style="background-color:white !important" />
                                    </div>
                                    @{
                                        if (Convert.ToInt32(TempData.Peek("bookingrRequests")) != 0)
                                        {
                                            <div class="nav-item" style="padding-top:15px;padding-bottom:5px">
                                                <a href="/Manager/BookingRequest" class="nav-link bg-success text-light font-weight-bolder" style="border-radius:5px">
                                                    Booking Requests
                                                    <span class="badge badge-light">
                                                        @Convert.ToInt32(TempData.Peek("bookingrRequests"))
                                                    </span>
                                                </a>

                                            </div>
                                        }
                                    }
                                    <div class="nav-item" style="padding-top:15px;padding-bottom:5px">
                                        @Session["UserName"].ToString()
                                    </div>
                                    <div class="nav-item" style="padding-top:5px;padding-bottom:5px">
                                        <a href="/Manager/AddTruck" class="nav-link bg-light text-danger font-weight-bolder " style="border-radius:5px">Add Trucks</a>
                                    </div>
                                    <div class="nav-item" style="padding-top:5px;padding-bottom:5px">
                                        <a href="/Manager/MyServices" class="nav-link bg-light text-danger font-weight-bolder " style="border-radius:5px">My Servicces</a>
                                    </div>
                                    <div class="nav-item text-center" style="margin-top:300px">
                                        <a href="/Home/Logout" class="btn font-weight-bold btn-outline-light">Logout</a>
                                    </div>
                                </div>
                        
                    }
                    else
                    {
                        <div class="nav-item text-center" style="margin-top:300px">
                            <a href="/Home/Logout" class="btn font-weight-bold btn-outline-light">Logout</a>
                        </div>
                    }

                }

            </div>
            <div class="col-10 offset-2" id="main">
                <div class="container" style="margin-top:50px;margin-left:10px;padding:20px;width:100%">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
